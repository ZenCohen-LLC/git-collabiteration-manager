# Core settings - ALWAYS required for iterations
NODE_ENV=development
TEST_MODE=true
API_KEY=aaaaa
ADMIN_PASSWORD=bbbbb

# Database configuration - matches docker-compose
DB_HOST=localhost
DB_PORT={dbPort}
DB_DATABASE=media_tool
DATABASE_CREDS={"username":"media_tool","password":"pass"}

# Service ports
PORT={backendPort}
VITE_PORT={frontendPort}
VITE_API_URL=http://localhost:{backendPort}/api

# Required for user creation
STAGE=dev

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Session configuration
SESSION_SECRET=test-secret-for-iterations
SESSION_TIMEOUT=86400000

# Feature flags
ENABLE_DEBUG=true
ENABLE_TEST_ENDPOINTS=true

# External services (disabled for iterations)
ZOHO_SYNC_ENABLED=false
SNOWFLAKE_SYNC_ENABLED=false
BEESWAX_SYNC_ENABLED=false

# Iteration metadata
ITERATION_NAME={iterationName}
ITERATION_CREATED={createdDate}